{
  "name": "opencoursehub-core",
  "version": "0.0.1",
  "description": "",
  "author": "Alireza Jozaghi",
  "license": "ISC",
  "main": "bin/www",
  "bin": {
    "credit-service": "./bin/www"
  },
  "private": true,
  "engines": {
    "node": ">=8.9.0"
  },
  "scripts": {
    "lint": "find . -path ./node_modules -prune -o -name '*.js' -print0 | xargs -0 prettier-check",
    "format": "find . -path ./node_modules -prune -o -name '*.js' -print0 | xargs -0 prettier --write",
    "start": "node bin/www",
    "start:dev": "nodemon --inspect=9230 bin/www",
    "test": "jest '\\.spec\\.js$'",
    "test:watch": "npm run test -- --watch",
    "precommit": "lint-staged",
    "zip": "git archive -o code.zip HEAD"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "camelcase-keys": "^4.2.0",
    "express": "^4.16.2",
    "express-async-router": "^0.1.12",
    "express-validation": "^1.0.2",
    "joi": "12",
    "jsonwebtoken": "^8.4.0",
    "module-alias": "^2.1.0",
    "mysql": "^2.16.0",
    "mysql2": "^1.6.4",
    "password-hash": "^1.2.2",
    "sequelize": "^4.42.0"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^5.0.0",
    "nodemon": "^1.12.1",
    "prettier": "^1.8.2",
    "prettier-check": "^2.0.0",
    "supertest": "^3.0.0"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "_moduleAliases": {
    "@db": "./src/lib/database",
    "@lib": "./src/lib"
  }
}
